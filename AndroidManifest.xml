                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBUPTRBg0TSE4E6m02XDJpNp1fxzwX8aRw" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".RoutesListActivity"
            android:label="@string/title_activity_routes_list" >
        </activity>
        <activity
            android:name=".GatherInfoActivity"
            android:label="@string/title_activity_gather_info" >
        </activity>
    </application>

</manifest>
